<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto mb-5">Add Products</a>
    </div>
    <div class="table-responsive">
      {{!-- id given to table for dataTable --}}
      <table class="table mt-5" id="productTable">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Options</th>

          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td><img style="width: 50px;height:50px" src="/product-images/{{{this._id}}}.jpg" alt=""></td>

            <td>{{Name}}</td>
            <td>{{Price}}</td>
            <td>{{Category}}</td>
            <td>{{Description}}</td>
            <td>
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-info mt-1">Edit</a>
              <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger mt-1"
                onclick="return confirm('Are you want to delete {{this.Name}}?')">Delete</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>

{{!-- DataTable Function --}}
<script>
  $(document).ready( function () {
    $('#productTable').DataTable();
} );
</script>