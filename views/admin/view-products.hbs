<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Products</a>
        </div>

        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td><img style="width: 50px;height:50px" src={{this.image}} alt=""></td>

      <td>{{name}}</td>
      <td>{{category}}</td>
      <td>{{description}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>